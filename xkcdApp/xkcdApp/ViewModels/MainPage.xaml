<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="xkcdApp.ViewModels.MainPage">
             

    <Frame BackgroundColor="#272537"
           CornerRadius="10">
        
        <StackLayout Padding="-20,-20,-20, 20">
            <Grid BackgroundColor="AliceBlue">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                
                <Button Grid.Column="0" x:Name="previousImageButton" Text="Previous" VerticalOptions="Center" BackgroundColor="AliceBlue"
                        />
                <Button Grid.Column="1" Text="Print Screen" VerticalOptions="CenterAndExpand" BackgroundColor="AliceBlue"/>
                <Button Grid.Column="2" Text="Next" VerticalOptions="CenterAndExpand" BackgroundColor="AliceBlue"/>

            </Grid>
        </StackLayout>





    </Frame>

</ContentPage>
